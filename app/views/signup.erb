<div class="container">
  <h1>Magic 8 Ball Simulator</h1>
  <h2>Sign up</h2>
  <p><a href="/balls">Browse available Magic 8 Balls.</a></p>

  <form id="signup-form" action="/users" method="post">
    <fieldset>
      <legend>Sign Up</legend>
      <% @user.try(:errors).try(:full_messages).each do |msg|  %>
        <p><%= msg %></p>
      <% end %>
      <label for="username">Username:</label>
      <input type="text" id="username" name="user[username]" value=<%= @user.try(:username) %>>
      <br />
      <label for="email">Email:</label>
      <input type="email" id="email" name="user[email]" value=<%= @user.try(:email) %>>
      <br />
      <label for="password">Password:</label>
      <input type="password" id="password" name="user[password]">
      <input type="submit" value="Sign Up">
    </fieldset>
  </form>

    <h2>Existing user? <a id="login-link" href="/">Log in here.</a></h2>

</div>