<h1>Magic Ball Simulator</h1>
<h2>Create a new Magic Ball!</h2>
<% if @errors %>
  <span>Something went wrong:</span>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<form action="/balls" method="post">
  <fieldset>
    <legend>New Ball Form</legend>
    <label for="name">Name:</label>
    <input type="text" name="ball[name]" value=<%= @ball.try(:name) %>>
    <br />
    <input type="submit" value="Create">
  </fieldset>
</form>
